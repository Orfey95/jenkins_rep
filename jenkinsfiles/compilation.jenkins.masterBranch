#!groovy
properties([disableConcurrentBuilds()])
pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
     environment {
        version = "calculator-1.3-SNAPSHOT"
    }
    stages {
            stage("downloading") {
            steps {
				sh 'rm -rf Calculator_Java'
				sh 'git clone https://github.com/Orfey95/Calculator_Java.git'
				sh 'cd Calculator_Java' 
		    } 
				  				  
             }  
	    
	    stage("testing") {
            steps {
				sh 'mvn test'
		    		sh 'mvn sonar:sonar'
		   } 
				  				  
             }
	    
	    stage("compilation") {
            steps {
				sh 'mvn compile'		    		
		   } 
				  				  
             }
	    
	    stage("assembling") {
            steps {		
		    		sh 'mvn clean package -Dmaven.test.skip=true'
		    		sh 'mvn clean deploy -Dmaven.test.skip=true -DaltDeploymentRepository=nexus-snapshots::default::http://35.198.102.124:8081/repository/Snapshot/'
		   } 
				  				  
             }
	    
        }
	
   }
